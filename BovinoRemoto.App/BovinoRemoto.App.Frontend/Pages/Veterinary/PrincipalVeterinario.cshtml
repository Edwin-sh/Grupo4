@page
@model BovinoRemoto.App.Frontend.Pages.PrincipalVeterinarioModel
@{
}
<div class="container text-center bg-dark bg-opacity-25">
    <p style="font-size: x-large;">Página Principal Dueño</p>

</div>

@if (Model.Veterinario == null)
{
    <div class="container text-center">
        <p class="text-danger" style="font-size: x-large;">No se encontró registro con ese numero de identificacion</p>
        <a class="btn btn-warning" asp-area="" asp-page="../Index">Regresar</a>

    </div>


}
else
{
    <ul class="nav nav-pills justify-content-end">

        <li class="nav-item" style="margin: 10px;">
                    <a class="btn btn-primary" asp-area="" asp-page="../Bovino/ListarPorVeterinario" asp-route-iddueño=@Model.Veterinario.Id>Bovinos a Cargo</a>
        </li>

        <li class="nav-item" style="margin: 10px; margin-left: 60px;">
            <a class="btn btn-primary" asp-page="/Index">Cerrar sesión</a>
        </li>

        

    </ul>

    <form>
        <div class="form-group">

                <label asp-for=@Model.Veterinario.Num_Identificacion>Numero de Identificacion</label>
                <input class="form-control" style="width: 500px;" value=@Model.Veterinario.Num_Identificacion readonly>
        </div>

        <div class="form-group">
                <label asp-for=@Model.Veterinario.Nombres>Nombres</label>
                <input class="form-control" placeholder="Nombres" asp-for=@Model.Veterinario.Nombres>
        </div>

        <div class="form-group">
                <label asp-for=@Model.Veterinario.Apellidos>Apellidos</label>
                <input class="form-control" asp-for=@Model.Veterinario.Apellidos placeholder="Apellidos">
        </div>

        <div class="form-group">
                <label asp-for=@Model.Veterinario.Direccion>Dirección</label>
                <input class="form-control" asp-for=@Model.Veterinario.Direccion placeholder="Dirección">
        </div>

        <div class="form-group">
                <label asp-for=@Model.Veterinario.Telefono>Teléfono</label>
                <input class="form-control" asp-for=@Model.Veterinario.Telefono placeholder="Numero telefónico">
        </div>

        <div class="form-group">
                <label asp-for=@Model.Veterinario.TarjetaProfesional>Tarjeta</label>
                <input class="form-control" asp-for=@Model.Veterinario.TarjetaProfesional placeholder="Tarjeta profesional">
        </div>

    </form>

}