@page
@model BovinoRemoto.App.Frontend.Pages.NuevoBovinoModel
@{
}
<div class="container text-center bg-dark bg-opacity-25">
    <p style="font-size: x-large;">Ingresando un nuevo Bovino</p>
</div>
<p></p>

<ul class="nav nav-pills justify-content-end">

    <li class="nav-item" style="margin: 10px;">
        <a class="btn btn-secondary" asp-route-iddueño=@Model.Dueño.Id asp-page="./PrincipalDueño">Regresar</a>
    </li>

</ul>

<p></p>
<form method="post">
    <div class="form-group">
        <label asp-for="Bovino.Nombre">Nombre</label>
        <input asp-for="Bovino.Nombre" class="form-control" type="text" placeholder="Nombres">
    </div>

    <div class="form-group">
        <label asp-for="Bovino.Color">Color</label>
        <input asp-for="Bovino.Color" class="form-control" type="text" placeholder="Color">
    </div>

    <div class="form-group">
        <label asp-for="Bovino.Especie">Especie</label>
        <input asp-for="Bovino.Especie" class="form-control" type="text" placeholder="Especie">
    </div>

    <div class="form-group">
        <label asp-for="Bovino.Raza">Raza</label>
        <input asp-for="Bovino.Raza" class="form-control" type="text" placeholder="Raza">
        <small class="form-text text-muted">*Opcional</small>

    </div>

    <p></p>

    <button type="submit" class="btn btn-primary">Guardar</button>

</form>